%html
  %head
    %title Signup-fu
    = csrf_meta_tag
    = javascript_include_tag :defaults
    = yield :javascripts
  
    = yield :stylesheets
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/buttons.css', :media => "screen, projection"
    
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  
  %body#signup_fu.bp
    #container
      #header
        %h1= link_to "SignupFu", root_path
      
      
      #content
        #navigation
          =yield :nav
        
        - if flash[:notice]
          #flash_notice
            = flash[:notice]
        
        - if flash[:error]
          #flash_error
            = flash[:error]
        
        
        =yield
        
      #footer
        %p
          = t('layout.created_by')
          -#- if current_user
          -#  = link_to t("layout.logout"), user_session_path, :method => :delete
  