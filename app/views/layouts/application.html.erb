<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>SignupFu</title>
    <%= javascript_include_tag :all, :cache => true %>
    <%= stylesheet_link_tag :all, :cache => true %>
  </head>
  
  <body id="signup_fu">
    
    <div id="wrap">
      
      <div id="header">
        <h1><%= link_to "SignupFu", root_path %></h1>
      </div>
      <div id="flash">
        <%= flash[:notice] %>
        <%= flash[:error] %>
      </div>
      <div id="content">
        
        <div id="navigation">
          <%= yield :nav %>
        </div>
        <%= yield %>
      </div>
      
      <div id="footer">
        <p>
          SignupFu is created by Patrik Stenmark. 
        </p>
      </div>
      
    </div>
    
  </body>
</html>