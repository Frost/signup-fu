<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>SignupFu</title>
    <%= javascript_include_tag :all, :cache => true %>
    <%= stylesheet_link_tag :all, :cache => true %>
  </head>
  
  <body id="signup_fu">
    
    <div id="wrap">
      
      <div id="header">
        <h1><%= link_to "SignupFu", root_path %></h1>
      </div>
      <% if flash[:notice] %>
        <div id="flash_notice">
          <%= flash[:notice] %>
        </div>
      <% end -%>
      
      <% if flash[:error] %>
        <div id="flash_error">
          <%= flash[:error] %>
        </div>
      <% end -%>
      
      <div id="content">
        
        <div id="navigation">
          <%= yield :nav %>
        </div>
        <%= yield %>
      </div>
      
      <div id="footer">
        <p>
          <%= t('layout.created_by') %>
          <% if current_user %>
            (<%= link_to t('layout.log_out'), user_session_path, :method => :delete %>)
          <% end %>
        </p>
      </div>
      
    </div>
    
  </body>
</html>