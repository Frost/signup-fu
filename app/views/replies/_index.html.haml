%section
  %h2.foo= t('.title')

  - if can?(:manage, @event)
   
    = button_link_to(t("back_to", :name => @event.name), event_path(@event))
   
    %h3= t('.set_attending')
    %p= t('.attending_instructions')
   
    = form_tag(set_attending_event_replies_path(@event)) do
      = label_tag("name")
      = text_field_tag "name"
      %div#autocomplete_name.autocomplete
      = label_tag "paid"
      = check_box_tag "paid", "1", true
    
      = submit_tag t(".submit_attending")
 
  = render :partial => 'list', :locals => {:replies => @replies }
