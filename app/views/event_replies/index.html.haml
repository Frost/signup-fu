<% javascript names_event_event_replies_path(@event, :format => :js ) %>
<% javascript "event_replies.js"%>

<% content_for :nav do %>
  <%= button_link_to(t("back_to", :name => @event.name), event_path(@event)) %>
<% end -%>

<h2><%= t('.title')</h2>

<h3><%= t('.set_attending') %></h3>
<p><%= t('.attending_instructions') %></p>

<% form_tag(set_attending_event_event_replies_path(@event)) do %>
  <%= label_tag("name") %>
  <%= text_field_tag "name" %>
  <div id="autocomplete_name" class="autocomplete"></div>
  <%= label_tag "paid" %>
  <%= check_box_tag "paid", "1", true %>
  
  <%= submit_tag t(".submit_attending") %>
<% end %>

<%= render :partial => 'list', :locals => {:replies => @replies }%>
